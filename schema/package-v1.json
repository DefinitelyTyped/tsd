{
	"$schema": "http://json-schema.org/draft-04/schema",
	"title": "package_json",
	"description": "unofficial json-schema for npm's package.json",
	"allOf": [
		{
			"$ref": "#/definitions/standard"
		}
	],
	"definitions": {
		"minimal": {
			"allOf": [
				{
					"$ref": "#/definitions/root"
				},
				{
					"required": [
						"name",
						"version"
					]
				}
			]
		},
		"standard": {
			"allOf": [
				{
					"$ref": "#/definitions/root"
				},
				{
					"required": [
						"name",
						"version",
						"description",
						"keywords",
						"author",
						"homepage",
						"repository",
						"bugs",
						"licenses",
						"engines",
						"main",
						"scripts",
						"dependencies",
						"devDependencies"
					],
					"properties": {
						"scripts": {
							"type": "object",
							"properties": {
								"test": {
									"type" : "string",
									"pattern": "[a-zA-Z]"
								}
							}
						},
						"author": {
							"$ref": "#/definitions/person-object"
						},
						"contributors": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/person-object"
							}
						}
					}
				}
			]
		},
		"root": {
			"type": "object",
			"properties": {
				"name": {
					"$ref": "#/definitions/identifier"
				},
				"version": {
					"$ref": "#/definitions/semver"
				},
				"description": {
					"type": "string",
					"minLength": 1
				},
				"keywords": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"$ref": "#/definitions/identifier"
					}
				},
				"author": {
					"$ref": "#/definitions/person"
				},
				"contributors": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"$ref": "#/definitions/person"
					}
				},
				"homepage": {
					"$ref": "#/definitions/url"
				},
				"repository": {
					"$ref": "#/definitions/repository"
				},
				"man": {
					"oneOf": [
						{
							"$ref": "#/definitions/path"
						},
						{
							"type": "array",
							"uniqueItems": true,
							"items": {
								"$ref": "#/definitions/path"
							}
						}
					]
				},
				"bugs": {
					"oneOf": [
						{
							"$ref": "#/definitions/url"
						},
						{
							"type": "object",
							"required": [
								"url"
							],
							"properties": {
								"url": {
									"$ref": "#/definitions/url"
								},
								"email": {
									"$ref": "#/definitions/email"
								}
							}
						}
					]
				},
				"license": {
					"$ref": "#/definitions/licence"
				},
				"licenses": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"$ref": "#/definitions/licence"
					}
				},
				"private": {
					"type": "boolean"
				},
				"preferGlobal": {
					"type": "boolean"
				},
				"engines": {
					"$ref": "#/definitions/string-map"
				},
				"engineStrict": {
					"type": "boolean"
				},
				"main": {
					"$ref": "#/definitions/path"
				},
				"bin": {
					"oneOf": [
						{
							"$ref": "#/definitions/path"
						},
						{

							"$ref": "#/definitions/path-map"
						}
					]
				},
				"files": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"$ref": "#/definitions/path"
					}
				},
				"os": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"$ref": "#/definitions/identifier"
					}
				},
				"cpu": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"$ref": "#/definitions/identifier"
					}
				},
				"config": {
					"type": "object"
				},
				"publishConfig": {
					"type": "object"
				},
				"directories": {
					"type": "object",
					"properties": {
						"lib": {
							"$ref": "#/definitions/path"
						},
						"bin": {
							"$ref": "#/definitions/path"
						},
						"man": {
							"$ref": "#/definitions/path"
						},
						"doc": {
							"$ref": "#/definitions/path"
						},
						"example": {
							"$ref": "#/definitions/path"
						}
					}
				},
				"scripts": {
					"$ref": "#/definitions/string-map"
				},
				"dependencies": {
					"$ref": "#/definitions/dependency-map"
				},
				"devDependencies": {
					"$ref": "#/definitions/dependency-map"
				},
				"bundledDependencies": {
					"$ref": "#/definitions/dependency-map"
				},
				"bundleDependencies": {
					"$ref": "#/definitions/dependency-map"
				},
				"optionalDependencies": {
					"$ref": "#/definitions/dependency-map"
				},
				"peerDependencies": {
					"$ref": "#/definitions/dependency-map"
				}
			}
		},
		"url": {
			"type": "string",
			"pattern": "^https?:\/\/"
		},
		"email": {
			"type": "string",
			"pattern": "[a-zA-Z]"
		},
		"path": {
			"type": "string",
			"minLength": 1
		},
		"identifier": {
			"type": "string",
			"pattern": "^[\\w_-]+$"
		},
		"semver": {
			"type": "string",
			"pattern": "^\\d+\\.\\d+\\.\\d+"
		},
		"type-url": {
			"type": "object",
			"additionalProperties": false,
			"required": [
				"type",
				"url"
			],
			"properties": {
				"type": {
					"type": "string",
					"pattern": "[a-zA-Z]"
				},
				"url": {
					"$ref": "#/definitions/url"
				}
			}

		},
		"repository": {
			"$ref": "#/definitions/type-url"
		},
		"licence": {
			"oneOf": [
				{
					"type": "string",
					"pattern": "[a-zA-Z]"
				},
				{
					"$ref": "#/definitions/licence-object"
				}
			]
		},
		"licence-object": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"type": {
					"type": "string",
					"pattern": "[a-zA-Z]"
				},
				"url": {
					"$ref": "#/definitions/url"
				}
			}
		},
		"person": {
			"oneOf": [
				{
					"type": "string",
					"pattern": "[a-zA-Z]"
				},
				{
					"$ref": "#/definitions/person-object"
				}
			]
		},
		"person-object": {
			"type": "object",
			"required": [
				"name"
			],
			"properties": {
				"name": {
					"type": "string",
					"pattern": "[a-zA-Z]"
				},
				"email": {
					"$ref": "#/definitions/email"
				},
				"url": {
					"$ref": "#/definitions/url"
				}
			}
		},
		"string-map": {
			"type": "object",
			"additionalProperties": false,
			"patternProperties": {
				".+": {
					"type": "string"
				}
			}
		},
		"path-map": {
			"type": "object",
			"additionalProperties": false,
			"patternProperties": {
				".+": {
					"$ref": "#/definitions/path",
					"pattern": "[a-zA-Z]"
				}
			}
		},
		"dependency-map": {
			"$ref": "#/definitions/string-map"
		}
	}
}
